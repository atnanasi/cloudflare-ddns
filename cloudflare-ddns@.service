[Unit]
Description = Add dns query to cloudflare bind to %i
BindsTo=sys-subsystem-net-devices-%i.device
After=sys-subsystem-net-devices-%i.device network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=/usr/local/lib/cloudflare-ddns/.env
ExecStart = /usr/bin/python3 /usr/local/lib/cloudflare-ddns/cloudflare-ddns.py
Type = oneshot
RemainAfterExit=yes

[Install]
WantedBy = multi-user.target