[Unit]
Description = Add %i dns query to cloudflare

[Service]
ExecStart=/usr/bin/podman run \
    --env-file .env \
    --name=%p_%i \
    --net=host \
    --rm \
    cloudflare-ddns \
    -r AAAA \
    %i
ExecStartPre=-/usr/bin/podman kill %p_%i
ExecStartPre=-/usr/bin/podman rm %p_%i
ExecStartPre=/usr/bin/podman build -t cloudflare-ddns .
KillMode=none
TimeoutStartSec=0
Type=simple
WorkingDirectory=%h/pods/cloudflare-ddns

[Install]
WantedBy = default.target
